                </ToolKitChart:Chart.Title>
                <ToolKitChart:Chart.Axes>
                    <ToolKitChart:LinearAxis  Name="YAxisSK2" Orientation="Y" HorizontalAlignment="Left" ShowGridLines="True" >
                        <ToolKitChart:LinearAxis.AxisLabelStyle>
